{
  "name": "rademono",
  "private": "true",
  "engines": {
    "node": "15.3.0"
  },
  "workspaces": [
    "libs/client",
    "libs/global"
  ],
  "version": "1.0.0",
  "scripts": {
    "start:lib:global": "cd libs/global && npm run compile",
    "test:lib:global": "cd libs/global && npm run test:watch",
    "start:libs": "npm run start:lib:global",
    "test:libs": "npm run test:lib:global",
    "start:api": "cd apps/core-api && npm run start:dev",
    "start:clients": "cd apps/clients && npm run start",
    "start:apps": "run-p start:api start:clients"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.0.0",
    "eslint-plugin-prettier": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2"
  }
}
